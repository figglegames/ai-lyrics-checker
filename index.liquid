<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>AI Lyrics Checker – Test if Lyrics Are Human or AI</title>
  <meta name="description" content="Paste your lyrics and instantly check if they were likely written by AI or a human. No tracking. No storage. Just instant analysis." />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      font-family: sans-serif;
      background: #f5f4f0;
      color: #222;
      padding: 2rem;
      max-width: 800px;
      margin: auto;
    }
    h1 {
      font-size: 1.8rem;
      margin-bottom: 0.5rem;
    }
    textarea {
      width: 100%;
      height: 220px;
      font-size: 1rem;
      padding: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      background: #fff;
    }
    button {
      margin-top: 1rem;
      padding: 0.7rem 1.5rem;
      font-size: 1rem;
      background: #222;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    .verdict {
      margin-top: 1.5rem;
      padding: 1rem;
      font-size: 1.2rem;
      font-weight: bold;
      border-left: 5px solid;
    }
    .verdict.human {
      background: #e4fce4;
      border-color: #008000;
      color: #003300;
    }
    .verdict.ai {
      background: #fcecec;
      border-color: #b30000;
      color: #660000;
    }
    .subline {
      font-size: 0.9rem;
      font-weight: normal;
      margin-top: 0.4rem;
    }
    .confidence-bar {
      margin-top: 0.8rem;
      background: #ddd;
      border-radius: 8px;
      height: 14px;
      overflow: hidden;
    }
    .bar-fill {
      height: 100%;
      width: 0%;
      background: linear-gradient(to right, #4caf50, #81c784);
      transition: width 0.5s ease;
    }
    .bar-fill.ai {
      background: linear-gradient(to right, #f44336, #e57373);
    }
    .confidence-label {
      font-size: 0.85rem;
      margin-top: 0.3rem;
      text-align: right;
      color: #555;
    }
    footer {
      margin-top: 3rem;
      font-size: 0.85rem;
      color: #666;
    }
  </style>
</head>
<body>
  {% include "nav.html" %}

  <h1>AI Lyrics Checker</h1>
  <p>Paste your lyrics below. We’ll analyze them using GPT and our own logic to detect signs of human or AI authorship.</p>

  <textarea id="lyrics" placeholder="Paste your lyrics here..."></textarea>
  <div style="margin-top: 1rem;">
    <button onclick="analyzeLyrics()">Check for AI Lyrics</button>
    <button onclick="resetForm()" style="margin-left: 1rem; background: #888;">Clear</button>
  </div>
  <div id="result"></div>

  <footer>
    <p><strong>Disclaimer:</strong> This tool provides an estimate based on known AI patterns and GPT analysis. It does not guarantee accuracy. No lyrics are stored or shared. For entertainment and educational purposes only.</p>
  </footer>

  <script>
    function resetForm() {
      document.getElementById('lyrics').value = '';
      const resultBox = document.getElementById('result');
      resultBox.innerHTML = '';
      resultBox.className = '';
      resultBox.style.display = 'none';
    }

    async function analyzeLyrics() {
      const text = document.getElementById('lyrics').value.trim();
      const resultBox = document.getElementById('result');
      if (!text) {
        resultBox.style.display = 'none';
        return;
      }

      resultBox.innerHTML = 'Analyzing with GPT...';
      resultBox.className = '';
      resultBox.style.display = 'block';

      const aiPhrases = ['dust kicks up','amber hue','soul gets fed','wild winds sing','front porch swing','memory flame','home collide','shimmering veil','aching sky','whispers fade','call my name','endless night'];
      const phraseHits = aiPhrases.filter(p => text.toLowerCase().includes(p)).length;

      try {
        const response = await fetch('https://ai-lyrics-checker.onrender.com/checkLyrics', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lyrics: text }),
        });

        const data = await response.json();
        const conf = parseFloat(data.confidence) || 0;

        let verdictLabel = 'Very likely AI-generated';
        let className = 'ai';

        if (phraseHits >= 2 && conf < 80) {
          verdictLabel = '⚠️ Overruled: Very likely AI-generated';
          className = 'ai';
        } else if (conf >= 85) {
          verdictLabel = 'Human-written';
          className = 'human';
        } else if (conf >= 50) {
          verdictLabel = 'Likely human';
          className = 'human';
        } else if (conf >= 25) {
          verdictLabel = 'Possibly AI-generated';
          className = 'ai';
        }

        resultBox.className = 'verdict ' + className;
        resultBox.innerHTML = `
          ${verdictLabel}
          <p class='subline'>${data.explanation || 'Analysis complete.'}</p>
          <div class='confidence-bar'><div class='bar-fill ${className}' style='width: ${conf}%;'></div></div>
          <div class='confidence-label'>Confidence: ${conf}%</div>
        `;
      } catch (err) {
        resultBox.innerHTML = 'Error reaching GPT endpoint.';
        resultBox.className = 'verdict ai';
      }
    }
  </script>
</body>
</html>
