<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>AI Lyrics Checker – Test if Lyrics Are Human or AI</title>
  <meta name="description" content="Paste your lyrics and instantly check if they were likely written by AI or a human. No tracking. No storage. Just instant analysis." />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      font-family: sans-serif;
      background: #f5f4f0;
      color: #222;
      padding: 2rem;
      max-width: 800px;
      margin: auto;
    }
    h1 {
      font-size: 1.8rem;
      margin-bottom: 0.5rem;
    }
    textarea {
      width: 100%;
      height: 220px;
      font-size: 1rem;
      padding: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      background: #fff;
    }
    button {
      margin-top: 1rem;
      padding: 0.7rem 1.5rem;
      font-size: 1rem;
      background: #222;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    .verdict {
      margin-top: 1.5rem;
      padding: 1rem;
      font-size: 1.2rem;
      font-weight: bold;
      border-left: 5px solid;
    }
    .verdict.human {
      background: #e4fce4;
      border-color: #008000;
      color: #003300;
    }
    .verdict.ai {
      background: #fcecec;
      border-color: #b30000;
      color: #660000;
    }
    .subline {
      font-size: 0.9rem;
      font-weight: normal;
      margin-top: 0.4rem;
    }
    .confidence-bar {
      margin-top: 0.8rem;
      background: #ddd;
      border-radius: 8px;
      height: 14px;
      overflow: hidden;
    }
    .bar-fill {
      height: 100%;
      width: 0%;
      background: linear-gradient(to right, #4caf50, #81c784);
      transition: width 0.5s ease;
    }
    .bar-fill.ai {
      background: linear-gradient(to right, #f44336, #e57373);
    }
    .confidence-label {
      font-size: 0.85rem;
      margin-top: 0.3rem;
      text-align: right;
      color: #555;
    }
    footer {
      margin-top: 3rem;
      font-size: 0.85rem;
      color: #666;
    }
  </style>
</head>
<body>
  {% include "nav.html" %}

  <h1>AI Lyrics Checker</h1>
  <p>Paste your lyrics below. We’ll analyze the structure, repetition, and phrasing to detect signs of AI generation.</p>

  <textarea id="lyrics" placeholder="Paste your lyrics here..."></textarea>
  <button onclick="analyzeLyrics()">Check Lyrics</button>
  <div id="result"></div>

  <footer>
    <p><strong>Disclaimer:</strong> This tool provides an estimate based on known AI patterns and does not guarantee accuracy. No lyrics are stored or shared. For entertainment and educational purposes only.</p>
  </footer>

  <script>
    function getLastWord(line) {
      const words = line.trim().split(/\s+/);
      return words.length ? words[words.length - 1].toLowerCase().replace(/[^a-z]/g, '') : '';
    }

    function analyzeLyrics() {
      const text = document.getElementById('lyrics').value.trim();
      const resultBox = document.getElementById('result');
      if (!text) {
        resultBox.style.display = 'none';
        return;
      }

      const lines = text.split('\n').map(l => l.trim()).filter(Boolean);
      const totalLines = lines.length;
      let score = 0;

      // Human-style language patterns
      const contractions = text.match(/\b(?:don't|can't|won't|i'm|you're|it's|ain't)\b/gi) || [];
      const conversationalMatches = text.match(/(i swear|you know|i think|i miss you|it hurts|i can't explain)/gi) || [];
      let humanOffset = 0;
      if (conversationalMatches.length >= 2) humanOffset++;
      if (contractions.length >= 2) humanOffset++;
      humanOffset = Math.min(humanOffset, 2);

      // AI-style repetition and structure
      const repeatedMap = {};
      lines.forEach((line) => {
        repeatedMap[line] = (repeatedMap[line] || 0) + 1;
      });
      const repeated = Object.values(repeatedMap).filter(count => count > 1);
      if (repeated.length > 0 && repeated.reduce((a, b) => a + b, 0) < totalLines * 0.4) score++;

      const starts = lines.map(l => l.split(' ')[0]?.toLowerCase()).filter(Boolean);
      const freq = {};
      starts.forEach(w => freq[w] = (freq[w] || 0) + 1);
      if (Object.values(freq).some(v => v >= 4)) score++;

      const lengths = lines.map(l => l.split(' ').length);
      const avg = lengths.reduce((a, b) => a + b, 0) / lengths.length;
      if (lengths.filter(n => Math.abs(n - avg) <= 1).length / lengths.length > 0.9) score++;

      // Expanded AI phrase list
      const aiPhrases = ['fading light','broken heart','endless night','guardian soul','call my name','dream away','shattered','rise again','front porch swing','amber hue','dust kicks up','soul gets fed','home collide','memory flame','wild winds sing'];
      const phraseHits = aiPhrases.filter(p => text.toLowerCase().includes(p)).length;
      if (phraseHits >= 2) score++;

      // Improved rhyme detection (using full words)
      const lastWords = lines.map(getLastWord).filter(Boolean);
      const rhymeMap = {};
      lastWords.forEach(word => {
        const key = word.slice(-3); // better than 2 chars
        rhymeMap[key] = (rhymeMap[key] || 0) + 1;
      });
      if (Object.values(rhymeMap).filter(count => count >= 3).length >= 1) score++;

      // Enjambment detection
      const strongEnds = lines.filter(l => /[.!?]$/.test(l)).length;
      if (strongEnds / totalLines > 0.7) score++;

      // Final score adjustment
      score = Math.max(0, score - humanOffset);

      let verdict = 'Likely human-written';
      let className = 'human';
      let confidence = 70;

      if (score === 3) {
        verdict = 'Borderline – AI-like structure detected';
        className = 'ai';
        confidence = 80;
      } else if (score >= 4) {
        verdict = 'Very likely AI-generated';
        className = 'ai';
        confidence = 92;
      } else if (score === 2) {
        verdict = 'Possibly AI-generated';
        className = 'ai';
        confidence = 75;
      }

      resultBox.className = 'verdict ' + className;
      resultBox.innerHTML = `
        ${verdict}
        <p class='subline'>Analysis complete.</p>
        <div class='confidence-bar'><div class='bar-fill ${className}' style='width: ${confidence}%;'></div></div>
        <div class='confidence-label'>Confidence: ${confidence}%</div>
      `;
      resultBox.style.display = 'block';
    }
  </script>
</body>
</html>