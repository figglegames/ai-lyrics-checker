<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>AI Lyrics Checker – Was This Song AI-Generated?</title>
  <meta name="description" content="Paste lyrics and instantly check if a song was likely written by AI. Analyze patterns, detect authorship, and explore the difference between human and AI songwriting." />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      font-family: sans-serif;
      background: #f5f4f0;
      color: #222;
      padding: 2rem;
      max-width: 800px;
      margin: auto;
    }
    h1 {
      font-size: 1.8rem;
      margin-bottom: 0.5rem;
    }
    textarea {
      width: 100%;
      height: 220px;
      font-size: 1rem;
      padding: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      background: #fff;
    }
    button {
      margin-top: 1rem;
      padding: 0.7rem 1.5rem;
      font-size: 1rem;
      background: #222;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    .verdict {
      margin-top: 1.5rem;
      padding: 1rem;
      font-size: 1.2rem;
      font-weight: bold;
      border-left: 5px solid;
    }
    .verdict.human {
      background: #e4fce4;
      border-color: #008000;
      color: #003300;
    }
    .verdict.ai {
      background: #fcecec;
      border-color: #b30000;
      color: #660000;
    }
    .verdict.mixed {
      background: #fffbe6;
      border-color: #e6c300;
      color: #665200;
    }
    .subline {
      font-size: 0.9rem;
      font-weight: normal;
      margin-top: 0.4rem;
    }
    footer {
      margin-top: 3rem;
      font-size: 0.85rem;
      color: #666;
    }
  </style>
</head>
<body>
  {% include "nav.html" %}

  <h1>AI Lyrics Checker</h1>
  <p>Paste your lyrics below. We use advanced AI and pattern detection to spot signs of human or machine-written lyrics.</p>

  <textarea id="lyrics" placeholder="Paste your lyrics here..."></textarea>
  <div style="margin-top: 1rem;">
    <button onclick="analyzeLyrics()">Check for AI Lyrics</button>
    <button onclick="resetForm()" style="margin-left: 1rem; background: #888;">Clear</button>
  </div>
  <div id="result"></div>

  <footer>
    <p><strong>Disclaimer:</strong> This tool provides an estimate based on known AI patterns and GPT analysis. It does not guarantee accuracy. No lyrics are stored or shared. For entertainment and educational purposes only.</p>
  </footer>

  <script>
    function resetForm() {
      document.getElementById('lyrics').value = '';
      const resultBox = document.getElementById('result');
      resultBox.innerHTML = '';
      resultBox.className = '';
      resultBox.style.display = 'none';
    }

    async function analyzeLyrics() {
      const text = document.getElementById('lyrics').value.trim();
      const resultBox = document.getElementById('result');
      if (!text) {
        resultBox.style.display = 'none';
        return;
      }

      resultBox.innerHTML = 'Analyzing...';
      resultBox.className = '';
      resultBox.style.display = 'block';

      try {
        const response = await fetch('https://ai-lyrics-checker.onrender.com/checkLyrics', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lyrics: text }),
        });

        const data = await response.json();
        let verdict = '';
        let explanation = '';
        let className = '';

        if (data.verdict === "A") {
          verdict = "Human-written";
          explanation = "Published lyrics recognized.";
          className = "human";
        } else if (data.verdict === "B") {
          verdict = "Human-written";
          explanation = "Patterns suggest human authorship.";
          className = "human";
        } else if (data.verdict === "C") {
          verdict = "Possibly human";
          explanation = "Unclear, but leans human.";
          className = "mixed";
        } else if (data.verdict === "D") {
          verdict = "Very likely AI-generated";
          explanation = "Patterns suggest AI authorship.";
          className = "ai";
        } else {
          verdict = "Unknown";
          explanation = "Unable to determine authorship.";
          className = "mixed";
        }

        resultBox.className = 'verdict ' + className;
        resultBox.innerHTML = `
          ${verdict}
          <p class='subline'>${explanation}</p>
        `;
      } catch (err) {
        resultBox.innerHTML = 'Error reaching analysis server.';
        resultBox.className = 'verdict ai';
      }
    }
  </script>
</body>
</html>
